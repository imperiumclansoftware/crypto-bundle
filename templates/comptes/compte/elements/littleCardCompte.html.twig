{# Petite Card  pour Compte index #}
{# {% include '@Crypto/comptes/compte/elements/littleCardCompte.html.twig' %} #}
{# {% trans_default_domain("crypto") %} #}

{# <div class="card col-12 mb-3" style="max-width: 680px;"> #}
{% set cryptoBg = "" %}
{% if compte.fondGarantie == false %}
    {% set cryptoBg = 'bg-warning' %}
{% endif %}
<div class="card col-12 mb-3">

    <div class="row g-0">
        <div class="col-md-5 p-0 m-0 {{cryptoBg}}">
            {# <img class="img-fluid rounded-start shadow-lg"  style="max-width: 100px;" src="{{ asset('bundles/crypto/images/logoExchange/cryptocom.jpeg') }}" alt="L'exchange cryptocom"> #}
            <img class="img-fluid rounded-start shadow-lg" src="{{ asset('bundles/crypto/images/logoExchange/cryptocom.jpeg') }}" alt="L'exchange cryptocom">
        </div>

        {# -----------  faire un set  ------------------  #}
        
            <div class="col-md-7 {{cryptoBg}}">
                <div class="card-body"> 
                    <h4 class="card-title col-12 text-center">{{compte.nameCompte}}</h4>
                    <div class="row">
                        <div class="col-8">
                            {# <div class="card-text">Détenteur :  <small class="text-muted">{{compte.user}}</small> </div> #}
                            <div class="card-text">Plateforme :  <small class="text-muted">{{compte.plateformes}}</small> </div>
                        </div>
                        <div class="col-4">
                            <div>
                                <i class="far fa-calendar-alt text-primary">&nbsp;</i>
                                <small class="text-primary"><strong>{{ compte.ouverture|date('d/m/Y') }}</strong> </small>
                            </div>
                            <div>
                                {% if compte.cloture is not null %}
                                    <i class="far fa-calendar-times text-danger"></i>
                                    <small class="text-danger"><strong>{{ compte.cloture|date('d/m/Y') }}</strong></small>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                        <div class="row">
                                <div class="card-text">Type de Plateforme :  <small class="text-muted">{{compte.plateformes.types}}</small> </div>
                                <div class="card-text">
                                    {% if compte.fondGarantie == true %}
                                        <div class="col-12">
                                            Montant du fond de garantie : 
                                            <span class="badge rounded-pill bg-success">
                                                {{compte.montantGarantie|number_format(2, ',', '.') }}  € 
                                            </span>
                                        </div>
                                    {% else %}
                                        <div class="col-12 text-center">
                                            <span class="badge rounded-pill bg-danger text-center text-light">
                                                Pas de fond de garantie
                                            </span>
                                        </div>
                                    {% endif %}
                                </div>
                        </div>
                        <div class="row">
                            <div class="card-text">Observation : <small class="text-muted">{{compte.observation}}</small> </div>
                        </div>
                    </div>
                    {% if compte.cloture is null %}
                        <div class="row">
                            <div class="col-12 text-center">
                                <div class="container-fluid">
                                    <div class="btn btn-group fixed-right">
                                        <a class="shadow btn btn-warning bg-gradient" href="{{path('ics_crypto_comptes_compte_edit')}}">{{ button_label|default('Modifier compte') }}</a>
                                        <a class="shadow btn btn-danger bg-gradient" href="{{path('ics_crypto_comptes_compte_delete')}}">{{ button_label|default('Cloturer compte') }}</a>
                                    </div>
                                </div>
                            </div> 
                        </div>
                    {% endif %}
                {# </div> #}
            </div>
    </div>
</div>