{# affichage de chart des cryptos #}
{% extends '@Crypto/default/default.html.twig' %}

{% block main %}
    <h1 class="text-light text-center mt-4 mb-4">Cryptomonnaie - Day Taux</h1>
    <div class="row">
        <div class="card-deck">
            <div class="row">
                <div class="col-4">
                    <div class="card h-100">
                        {# <img class="card-img-top" src="holder.js/100x180/" alt=""> #}
