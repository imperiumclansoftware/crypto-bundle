                            <h4 class="card-title">Favoris</h4>
                            <p class="card-text">
                                <script src="https://widgets.coingecko.com/coingecko-coin-list-widget.js"></script>
                                <coingecko-coin-list-widget  coin-ids="ripple, solana, polkadot  " currency="eur" locale="fr"><coingecko-coin-list-widget>
                            </p>
                        </div>
                    </div>
                    <div class="card h-100">
                        {# <img class="card-img-top" src="holder.js/100x180/" alt=""> #}
